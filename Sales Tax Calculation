// Calculate Sales Tax and tip on a resturant bill


#include <iostream>
using namespace std;

int main(int argc, const char * argv[])
{
   //Variables
    int purchase = 52;
    double state_tax = 0.04;
    double county_tax = 0.02;
    
    //Total Tax
    double total_tax = state_tax + county_tax;
    double tax_purchase = total_tax * purchase;
    
    //Tax for purchase
    double total_purchase = tax_purchase + purchase;
    
    cout << "The total purchase is " << total_purchase << " and the total tax is "
    << tax_purchase << endl;
    
    return 0;
}
